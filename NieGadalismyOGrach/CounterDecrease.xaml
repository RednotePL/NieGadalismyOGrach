<Window x:Class="NieGadalismyOGrach.CounterDecrease"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NieGadalismyOGrach"
        xmlns:properties="clr-namespace:NieGadalismyOGrach.Properties"
        mc:Ignorable="d"
        Title="CounterDecrease" Height="450" Width="800">
    <Grid>
        <Button x:Name="Btn1" Content="50" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Margin="0,275,0,0" Height="100" Click="Button_Click" FontSize="64" />
        <Label Content="{x:Static properties:Resources.Count_To_0}" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" FontSize="48" />
        <Button Content="{x:Static properties:Resources.Reset}" HorizontalAlignment="Left" Margin="60,275,0,0" VerticalAlignment="Top" Width="100" Height="100" Click="Button_Click_2" />
        <Button Content="{x:Static properties:Resources.Check}" HorizontalAlignment="Left" Margin="640,275,0,0" VerticalAlignment="Top" Width="100" Height="100" Click="Button_Click_1" />
    </Grid>
</Window>
