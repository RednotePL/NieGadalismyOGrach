<Window x:Class="NieGadalismyOGrach.CatchTheButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NieGadalismyOGrach"
        xmlns:properties="clr-namespace:NieGadalismyOGrach.Properties"
        mc:Ignorable="d"
        Title="CatchTheButton" Height="450" Width="800">
    <Grid>
        <Button x:Name="Butt1" Content="R" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Click="Butt1_Click" Margin="600,200,0,0" />
        <Label x:Name="currentTask" Content="{x:Static properties:Resources.Click_The_Button}" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" FontSize="48" />
        <Button x:Name="StaButt" Content="L" HorizontalAlignment="Left" Margin="100,200,0,0" VerticalAlignment="Top" Width="20" Click="StaButt_Click" />
    </Grid>
</Window>
